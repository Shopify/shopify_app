  "devDependencies": {
    "@sinonjs/referee-sinon": "4.1.0",
    "eslint": "5.2.0",
    "eslint-config-prettier": "2.9.0",
    "eslint-config-sinon": "1.0.3",
    "eslint-plugin-ie11": "1.0.0",
    "eslint-plugin-local-rules": "0.1.0",
    "eslint-plugin-mocha": "5.1.0",
    "eslint-plugin-prettier": "2.6.2",
